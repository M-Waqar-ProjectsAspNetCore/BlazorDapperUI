@page "/students"
@inherits StudentListBase

<div class="row">
    <div class="col-sm-10 col-12">
        <h3>Students List</h3>
    </div>
    <div class="col-sm-2 col-12">
        <a href="/newstudent" class="btn btn-primary pull-right">Add Student</a>
    </div>
</div>

@if (list == null)
{
    <h1>Loading ...</h1>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email Address</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (StudentModel student in list)
            {
                <tr>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td>@student.EmailAddress</td>
                    <td>
                        <a href="@($"/editstudent/{student.Id}")" class="btn btn-primary btn-sm">Edit</a>
                        <button @onclick="@(() => DeleteEmployee(student.Id))" class="btn btn-primary btn-sm">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}