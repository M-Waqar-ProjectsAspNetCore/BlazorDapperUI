@page "/sp-students"
@inherits ListStudentBase

<div class="row">
    <div class="col-sm-10 col-12">
        <h3>Students List</h3>
    </div>
    <div class="col-sm-2 col-12">
        <a href="/sp-newstudent" class="btn btn-primary pull-right">Add Student</a>
    </div>
</div>
<hr />

@if (Studentlist == null)
{
    <h1>Loading ...</h1>
}
else
{
<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email Address</th>
            <th>Department</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (SPStudentModel student in Studentlist)
        {
        <tr>
            <td>@student.FirstName</td>
            <td>@student.LastName</td>
            <td>@student.EmailAddress</td>
            <td>@student.Department</td>
            <td>
                <a href="@($"/sp-editstudent/{student.Id}")" class="btn btn-primary btn-sm">Edit</a>
                <button @onclick="@(() => DeleteEmployee(student.Id))" class="btn btn-primary btn-sm">Delete</button>
            </td>
        </tr>
        }
    </tbody>
</table>
}

