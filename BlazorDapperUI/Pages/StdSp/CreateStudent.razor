@page "/sp-newstudent"
@inherits CreateStudentBase

<h3>Create Student</h3>
<hr />

<EditForm Model="spStudentModel" OnValidSubmit="StudentCreate">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="row form-group">
        <label class="col-4">First Name</label>
        <div class="col-8">
            <InputText @bind-Value="spStudentModel.FirstName" class="form-control" />
            <ValidationMessage For="@(() => spStudentModel.FirstName)" />
        </div>
    </div>
    <div class="row form-group">
        <label class="col-4">Last Name</label>
        <div class="col-8">
            <InputText @bind-Value="spStudentModel.LastName" class="form-control" />
            <ValidationMessage For="@(() => spStudentModel.LastName)" />
        </div>
    </div>
    <div class="row form-group">
        <label class="col-4">Email Address</label>
        <div class="col-8">
            <InputText @bind-Value="spStudentModel.EmailAddress" class="form-control" />
            <ValidationMessage For="@(() => spStudentModel.EmailAddress)" />
        </div>
    </div>
    <div class="row form-group">
        <label class="col-4">Middle Name</label>
        <div class="col-8">
            <InputText @bind-Value="spStudentModel.MiddleName" class="form-control" />
        </div>
    </div>
    <div class="row form-group">
        <label class="col-4">Department Id</label>
        <div class="col-8">
            <InputNumber @bind-Value="spStudentModel.DeptId" class="form-control" />
        </div>
    </div>
    <button class="btn btn-primary">Create Student</button>
</EditForm>

