@page "/newstudent"
@inherits AddStudentBase

<h3>Add Student</h3>
<hr />

<EditForm Model="NewStudent" OnValidSubmit="AddStudent">
    <DataAnnotationsValidator />
    <div>
        <ValidationSummary />
    </div>
    <div class="form-group row">
        <label class="col-4">First Name</label>
        <div class="col-8">
            <InputText @bind-Value="NewStudent.FirstName" class="form-control" />
            <ValidationMessage For="@(() => NewStudent.FirstName)" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-4">Last Name</label>
        <div class="col-8">
            <InputText @bind-Value="NewStudent.LastName" class="form-control" />
            <ValidationMessage For="@(()=> NewStudent.LastName)" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-4">Email Address</label>
        <div class="col-8">
            <InputText @bind-Value="NewStudent.EmailAddress" class="form-control" />
            <ValidationMessage For="@(() => NewStudent.EmailAddress)" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-4">Middle Name</label>
        <div class="col-8">
            <InputText @bind-Value="NewStudent.MiddleName" class="form-control" />
        </div>
    </div>
    <button class="btn btn-primary">Save Student</button>
</EditForm>
